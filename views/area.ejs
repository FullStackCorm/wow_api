<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <link rel='stylesheet' href='/style.css'>
    <title>RAID BOSS TRAINING PROGRAMME</title>
</head>
<body>
    <div class='banner-top'>
        <h1>SCOURGE GUILD<br />RAID BOSS TRAINING PROGRAMME</h1>
    </div>
    
<div class='page-wrapper'>
    <div class='container sidebar-nav'>
        <nav class='navbar dropdown'>
            <ul>
                <li>
                    <h2></h2>
                    <form action="/raid/Naxxramas" method="GET">
                        <button id='Naxxramas-button'class='button card' type="submit">Naxxramas</button>
                    </form>
                </li>
                <li>
                    <form action="/raid/Ulduar" method="GET">
                        <button id='Ulduar-button' class='button card' type="submit">Ulduar</button>
                    </form>
                </li>
                <li>
                    <form action="/raid/Icecrown Citadel" method="GET">
                        <button id='Icecrown_Citadel-button' class='button card' type="submit">Icecrown Citadel</button>
                    </form>
                </li>
            </ul>
        </nav>
    </div>

    <div class='container'>
        <div class='inner'><h2><%=area.areaName%></h2>
            <h3><%=area.bosses[0].bossName%></h3>
            <h4>Item Level: <%= area.bosses[0].itemLevelRange %></h4>
        
            <h3>Rare Drops:</h3>
            <%area.bosses[0].bossDrop.forEach(item => { %>
            <h4><%=item%></h4>
        
            <% })%>
        </div>
        <div class='inner'>
            <img src='<%=area.bosses[0].gif%>' alt='yeet'>
        </div>
        
    </div>
   
    <div class='container'>
        <div class='container'>
            <h3><%=area.bosses[1].bossName%></h3>
            <h4>Item Level: <%= area.bosses[1].itemLevelRange %></h4>
            
            <h3>Rare Drops:</h3>
            <%area.bosses[1].bossDrop.forEach(item => { %>
            <h4><%=item%></h4>
            
            <% })%>
        </div>
        
        <div class='container'>
            <img src='<%=area.bosses[1].gif%>' alt='yeet'>
        </div>
        
    </div>
  

    
    
<div id='display'>
    
</div>
</div>
    
    <script src='server.js'></script>
</body>
</html>
